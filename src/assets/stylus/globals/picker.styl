#hero-selector
	width 36vw
	max-width 387px
	background-color MainColor
	height -webkit-calc(100vh - 40px)
	transition none
	padding 20px
	border-top 1px solid lighten(MainColor, 10%)

	& > input
		width 100%
		border 0px
		background-color lighten(MainColor, 10%)
		outline none
		padding-left 20px
		height 40px
		margin-top 10px
		font-size MainFontSize + 1 px
		float left
		color MainColorForward
		border-radius MainBorderRadius px

ul#heroes
	width 100%
	height -webkit-calc(100% - 100px)
	list-style none
	overflow-y scroll
	border 1px solid lighten(MainColor, 10%)
	border-right 0

	& > li
		padding 10px
		line-height 26px
		cursor pointer
		white-space nowrap
		position relative
		overflow hidden
		color MainColorForward
		border-bottom 1px solid lighten(MainColor, 10%)

		&:hover
			background-color lighten(MainColor, 10%)

		&.selected
			background-color lighten(MainColor, 10%)

		& > img
			height 26px
			float left
			display block
			margin-right 15px
			opacity 0.8

		& > span
			color lighten(MainColor, 25%)
			position absolute
			white-space nowrap
			margin-left 10px

		&:last-child
			border 0

		& #heroname
			display inline-block
			float left

	&:hover::-webkit-scrollbar
		width: 15px

#hero-selector-btns
	background-color MainColorForward
	height 40px
	line-height 40px
	float left
	margin-top 10px
	border-radius MainBorderRadius px
	display table
	overflow hidden
	width 100%

	& div
		height 40px
		line-height 40px
		cursor pointer
		display table-cell
		color MainColor
		width 50%
		text-align center
		position relative
		font-size MainFontSize + 1 px
		font-weight 600

		&:nth-child(2n+1):before
			display block
			width 10px
			height 100%
			content ''
			-webkit-mask-size 10px
			position absolute
			-webkit-mask-repeat no-repeat
			-webkit-mask-position center
			background-color MainColor

		&:hover
			background-color lighten(MainColor, 80%)

		&:nth-child(2)
			width 0px
			padding 0 30px
			cursor default
			border-left 1px solid lighten(MainColor, 80%)
			border-right 1px solid lighten(MainColor, 80%)

			&:hover
				background-color initial

		&:nth-child(1)
			padding-left 20px

			&:before
				left 20px
				-webkit-mask-image url(../images/radiant-arrow.svg)

		&:nth-child(3)
			padding-right 20px

			&:before
				right 20px
				-webkit-mask-image url(../images/dire-arrow.svg)

.heron
	display none

.heroh
	display block

#picker
	width 100%

#picker-content
#picker-content-selector
	display table-cell

#picker-content
	width 100%
	height: 100%;

	& #teams
		width 50%
		float left
		padding 20px
		display block

		& #team-name
			color MainColor
			font-size MainFontSize +1 px
			font-weight 600

		&:nth-child(1) #team-name
			text-align left

		&:nth-child(2) #team-name
			text-align right

		&:nth-child(1) #team-hero
			float left
			margin-right  1px

		&:nth-child(2) #team-hero
			float right
			margin-left  1px

		& #team-hero
			width -webkit-calc(20% - 1px)
			max-width 59px
			margin-top 10px
			display inline-block
			background-color lighten(MainColor, 95%)
			position relative

.team-hero-hidden
	width 100%
	visibility hidden
	display block

.team-hero-icon
	cursor pointer
	opacity 0.7
	width 100%
	height 100%
	position absolute
	top 0

	&:hover
		opacity 1

	& > img
		display block
		width 100%

.opacity
	opacity 1

#picker-info
	width 100%
	float left
	padding 0px 20px 20px

	& #picker-info
		padding 0
		margin-top 20px

#picker-content-helper
	width 100%
	height -webkit-calc(100vh - 40px)
	float left

#hero-icon
	width 70px
	position relative
	float left
	background-color lighten(MainColor, 95%)

	& #hero-icon-img
		display block
		width 100%
		position absolute
		top 0
		left 0

		& img
			width 100%

#picker-hero-name
	float left
	margin-left 10px
	font-size 20px
	font-weight 600
	line-height 24px
	color MainColor

	& span
		display block
		font-size 13px
		line-height 12px
		color lighten(MainColor, 30%)

#picker-hero-info
	width 100%
	float left
	border-bottom 1px solid lighten(MainColor, 85%)

	& #picker-hero-info-li
		width 20%
		display block
		float left
		height 40px
		color MainColor
		font-size MainFontSize + 1px
		font-weight 600
		line-height 40px
		padding-left 10px
		white-space nowrap
		border-right 1px solid lighten(MainColor, 85%)

		&:first-child
			width 100%
			border-right 0
			padding-left 0
			border-bottom 1px solid lighten(MainColor, 85%)

		&:nth-child(2)
			border-left 1px solid lighten(MainColor, 85%)

		& img
			display inline-block
			float left
			margin-top 10px
			margin-right 10px
			opacity 0.7
			height 20px

		& div
			font-weight 600

#circle
	display block
	width 100%
	float left
	text-align center
	position relative
	margin-top 30px

	& div:nth-child(n+3)
		font-size MainFontSize px
		font-weight 600
		color MainColor

#circle-left-half
	width 80px
	height 160px
	display inline-block
	margin-right -2px
	position relative
	overflow hidden
	background-color lighten(MainColor, 85%)
	border-radius 80px 0px 0px 80px

	&:after
		content ''
		width 65px
		height 130px
		position absolute
		right 0px
		top 15px
		z-index 10
		background-color MainColorForward
		border-radius 65px 0px 0px 65px

	& div
		width 80px
		height 160px
		position absolute
		left 0px
		top 0px
		transform-origin right center
		-webkit-transform rotate(0deg)
		z-index 9
		background-color lighten(MainColor, 95%)
		border-radius 80px 0px 0px 80px

#circle-right-half
	width 80px
	height 160px
	margin-left -2px
	position relative
	display inline-block
	background-color lighten(MainColor, 85%)
	border-radius 0px 80px 80px 0px

	&:after
		content ''
		width 65px
		height 130px
		position absolute
		left  0px
		top 15px
		z-index 10
		background-color MainColorForward
		border-radius 0px 65px 65px 0px


#circle-center
	width 100%
	text-align center
	position absolute
	top 65px
	z-index 12

#circle-left
	position absolute
	top 70px
	text-align right
	padding-right 100px
	font-size MainFontSize + 3px !important
	width 50%

#circle-right
	position absolute
	top 70px
	text-align left
	right 0
	font-size MainFontSize + 3px !important
	padding-left 100px
	width 50%

#clear
	right 20px
	position absolute
	bottom 20px
	height 40px
	cursor pointer
	padding 0 20px
	border-radius MainBorderRadius px
	background-color MainColor
	line-height 40px
	color MainColorForward

	&:hover
		background-color lighten(MainColor, 10%)

.active
	background-color lighten(MainColor, 10%)
