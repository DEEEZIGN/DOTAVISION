#menu
	background-color MainColor
	-webkit-app-region drag
	display block
	width 100%
	height 40px

#menu > div
	padding 0 30px
	height 40px
	line-height 40px
	font-family MainFont
	display block
	float left
	color MainColorForward
	border-right 1px solid lighten(MainColor, 10%)
	cursor pointer
	-webkit-app-region no-drag

	&:hover
		background-color lighten(MainColor, 10%)

	&:nth-last-child(-n+3)
		border 0

	&:nth-child(2)
		border-left 1px solid lighten(MainColor, 10%)

	&:nth-last-child(-n+2) // control btns
		float right
		padding 0px
		height 10px
		width 10px
		border-radius 5px
		margin-top 15px

		&:hover
			background-color MainColorForward


	&:first-child
		-webkit-mask-size 20px
		-webkit-mask-image url(../images/logo.svg)
		-webkit-mask-repeat no-repeat
		-webkit-mask-position center
		background-color MainColorForward

	&:nth-last-child(1) // minimize
		background-color lighten(MainColor, 20%)
		margin-right 5px

	&:nth-last-child(2) // close
		margin-right 15px
		background-color lighten(MainColor, 30%)
