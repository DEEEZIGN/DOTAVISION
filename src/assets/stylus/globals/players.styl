#players-analisys-table
	height 40px
	display block
	padding-right 40px
	width 100%
	border-top 1px solid lighten(MainColor, 10%)

	&:last-child
		border-bottom 0px !important

	&.players-analisys-table-header
		background-color MainColor

		& > div
			color MainColorForward
			border 0px

	& > div
		display inline-block
		height 40px
		line-height 40px
		float left
		padding-left 20px
		overflow hidden
		border-right 1px solid lighten(MainColor, 10%)

		&:last-child
			border 0px

		&:nth-child(1)
			width 200px
			text-align left

		&:nth-child(2)
			padding-left 0
			text-align center
			width 150px

		&:nth-child(3)
			width -webkit-calc(100% - 480px)
			position relative
			text-align center

		&:nth-child(4)
			width 130px
			padding-left 0
			text-align center

	&.players-analisys-table-row
		background-color MainColorForward
		border-color lighten(MainColor, 80%)
		border-top 0
		border-bottom 1px solid lighten(MainColor, 90%)

		& > div
			color MainColor
			font-weight 600
			border-color lighten(MainColor, 90%)

#players-analisys-name-ava
	width 25px
	height 25px
	opacity 0.8
	display inline-block
	vertical-align middle
	background-color lighten(MainColor, 90%)
	border-radius 50%
	overflow hidden
	margin-right 10px

	& img
		width 100%

#players-analisys-name-text
	display inline-block
	font-weight 600
	white-space nowrap
	width -webkit-calc(100% - 50px)

.players-analisys-links > a
	display inline-block
	width 90px
	height 26px
	text-decoration none
	text-align center
	line-height 26px
	border-radius MainBorderRadius px
	color MainColorForward
	background-color MainColor

	&:hover
		background-color lighten(MainColor, 10%)

.borderfix
	border-bottom 0 !important

#players-analisys-team
	display block
	width 100%
	height 100px
	background-color lighten(MainColor, 90%)
	line-height 60px
	font-size 15px
	padding 20px

#players-analisys-mph
	position absolute
	left 0px
	text-align center
	top 11.5px
	white-space nowrap
	width 100%
	height 17px
	padding 0 20px
	line-height 20px
	overflow hidden

	& > img
		height 17px
		opacity 0.8
		margin-right 5px

#players-analisys-team > span
	float left
	color MainColor
	font-weight 600

#players-analisys-team > div

	display inline-block
	margin-left 20px
	opacity 0.8
	margin-top 20px
	float left

	& > img
		height 20px
		margin-right 1px
		float left

#players-analisys-table-teamname
	height 40px
	line-height 40px
	border-bottom 1px solid lighten(MainColor, 90%)
	color MainColor
	font-weight 600
	font-size MainFontSize px
	padding 0 60px 0px 20px
	text-align left
	width 100%

#separate
	width 100%
	background-color lighten(MainColor, 90%)
	height 120px


	& div
		width 100%
		height 120px
		-webkit-mask-size 60px
		-webkit-mask-image url(../images/logo.svg)
		-webkit-mask-repeat no-repeat
		-webkit-mask-position center
		background-color lighten(MainColor, 75%)

#players-analisys-team-radiant-mph
#players-analisys-team-dire-mph
	display none

#players-analisys-summary-btn
	display inline-block
	margin-left 20px
	background-color darken(MainColor, 10%)
	height 26px
	float right
	color MainColorForward
	line-height 26px
	width 90px
	margin-top 7px
	text-align center
	cursor pointer
	border-radius MainBorderRadius px

	&:hover
		background-color MainColor

#players-analisys-team-mph-popup
	& img
		height 24px
		opacity 0.8
		margin-right 5px

#totals
	position fixed
	width 40px
	bottom 0px
	right 0px
	height -webkit-calc(100% - 80px)
	background lighten(MainColor, 90%)
	text-align center
	cursor pointer
	z-index 99
	font-weight 600

	&:before
		display block
		width 40px
		height 100%
		content ''
		transform rotate(0deg)
		position absolute
		-webkit-mask-repeat no-repeat
		-webkit-mask-position center
		-webkit-mask-size 8px
		background-color MainColor
		-webkit-mask-image url(../images/radiant-arrow.svg)

	&:hover
		background-color MainColor
		color MainColorForward

		&:before
			background-color MainColorForward

	&.active:before
		transform rotate(180deg)

#PlayersTotals
	position fixed
	width -webkit-calc(100% - 239px)
	top 41px
	height -webkit-calc(100% - 71px)
	right -100%
	background MainColorForward

	&.active
		right 40px

.table-totals
	height 40px
	line-height 40px
	display flex
	border-bottom 1px solid lighten(MainColor, 90%)

	&:last-child
		border-bottom 0px !important

	& > div
		font-weight 600
		width 16.6%
		float left
		color MainColor
		text-align center
		border-left 1px solid lighten(MainColor, 90%)

		&.max
			text-decoration underline
			font-weight bold

	&#table-totals-header
		background-color MainColor
		border-bottom 0
		height 39px
		line-height 39px

		& > div
			color MainColorForward
			font-weight 500
			border-left 0px
