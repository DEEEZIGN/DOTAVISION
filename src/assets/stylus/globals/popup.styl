#popup
	position fixed
	width 100%
	height -webkit-calc(100vh - 40px)
	top 40px
	left 0
	display table
	z-index 9999999
	background-color alpha(darken(MainColor, 80%), 0.75)

	& > div
		display table-cell
		vertical-align middle

		& > div
			margin-left auto
			transform translateY(-20px) perspective( 600px ) rotateX( 10deg )
			margin-right auto
			width 600px
			background-color MainColorForward
			padding 40px
			font-size MainFontSize + 2px
			color darken(MainColorForward, 80%)

			& h2
				color MainColor
				margin-top 20px
				padding-top 20px
				margin-bottom 10px
				border-top 1px solid darken(MainColorForward, 10%)

				&:first-child
					margin-top 0
					padding-top 0
					border-top 0px
			& h3
				margin -10px 0px 10px
				width 100%
				color darken(MainColorForward, 80%)
				padding-bottom 5px
				font-weight 600
				border-bottom 1px solid darken(MainColorForward, 10%)

			& a
				background-color MainColorForward
				border 1px solid darken(MainColorForward, 10%)
				color darken(MainColorForward, 80%)
				padding 10px 20px
				text-decoration none
				display inline-block
				margin-right 10px
				font-size MainFontSize + 2px
				border-radius MainBorderRadius px

				&:hover
					background-color MainColor
					color MainColorForward
					border-color MainColor

			& p
				text-align justify
				margin 11px 0px
				font-size MainFontSize + 2px
				padding-bottom 0px

#popup-wrapper
	visibility hidden
	opacity 0
	position absolute
	z-index 9999999

	&.active
		visibility visible
		opacity 1

		& > #popup > div > div
			transform translateY(0) perspective( 600px ) rotateX( 0 )
