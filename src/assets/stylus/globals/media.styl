@media screen and (max-width: 900px)
	#hero-selector-btns div:nth-child(2n+1)
		color transparent
		padding-left 0 !important
		padding-right 0 !important

		&::before
			width 100% !important
			left 0 !important
			right 0 !important
			top 0 !important

	#hero-selector-btns div:nth-child(2)
		width 1px !important
		overflow hidden !important
		padding 0 !important
		display block !important
		cursor default !important
		border-left 0px !important

	ul#heroes > li > span
		display none !important

	ul#heroes > li #heroname
		font-size MainFontSize - 2px !important
